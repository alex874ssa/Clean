<script>
    function calculate() {
        const area = parseFloat(document.getElementById('area').value);
        const rooms = parseInt(document.getElementById('rooms').value);
        const type = parseFloat(document.getElementById('type').value);

        if (isNaN(area) || isNaN(rooms)) {
            document.getElementById('result').innerText = 'Пожалуйста, введите корректные данные.';
            return;
        }

        const basePrice = 1.5; // евро за м²
        const timePer20 = 1; // час на 20 м²
        const price = (area * basePrice * type).toFixed(2);
        const time = Math.ceil(area / 20);

        document.getElementById('result').innerText = `Примерная стоимость: €${price}. Время уборки: ~${time} ч.`;
    }
</script>

